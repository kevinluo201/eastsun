<div class="page-header">
  <h1>總表</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <th>買進</th>
      <th>賣出</th>
      <th>盈虧</th>
    </thead>
    <tbody>
      <td>$<%= @bought %></td>
      <td>$<%= @sold %></td>
      <td class="<%= @total >= 0 ? 'blue' : 'red' %>">
        <%= @total >= 0 ? '+' : '-' %> $<%= @total %>
      </td>
    </tbody>
  </table>
</div>
