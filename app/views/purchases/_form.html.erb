<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :item_id, input_html: { value: @purchase.item.id, readonly: true}  %>
    <h5><%= @purchase.item.name %></h5>
    <%= f.input :price %>
    <%= f.input :amount %>
    <%= f.input :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
