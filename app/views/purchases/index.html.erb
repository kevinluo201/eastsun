<div class="page-header">
  <%= link_to new_purchase_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Purchase
  <% end %>
  <h1>Listing purchases</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Amount</th>
            <th>When</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @purchases) do |purchase| %>
            <td><%= purchase.item %></td>
            <td><%= purchase.price %></td>
            <td><%= purchase.amount %></td>
            <td><%= purchase.when %></td>
            <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
